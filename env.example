# =============================================================================
# NARADA AI - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your API keys and configuration

# =============================================================================
# AI/LLM PROVIDERS
# =============================================================================

# OpenAI API Key (required for GPT models and embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API Key (optional - for accessing multiple LLM providers)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Cohere API Key (optional - for Cohere embeddings and models)
COHERE_API_KEY=your_cohere_api_key_here

# Ollama Configuration (optional - for local models)
OLLAMA_API_URL=http://localhost:11434
OLLAMA_FAST_MODEL=llama2
OLLAMA_QUALITY_MODEL=llama2:13b

# =============================================================================
# SEARCH PROVIDERS
# =============================================================================

# Firecrawl API Key (for web scraping)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Tavily API Key (for web search)
TAVILY_API_KEY=your_tavily_api_key_here

# SERP API Key (alternative search provider)
SERP_API_KEY=your_serp_api_key_here

# DuckDuckGo API Key (private search with rate limits)
DUCKDUCKGO_API_KEY=your_duckduckgo_api_key_here

# =============================================================================
# VECTOR DATABASE (QDRANT)
# =============================================================================

# Qdrant Configuration (automatically set for Docker Compose)
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION_NAME=narada_vectors
# QDRANT_API_KEY=your_qdrant_api_key_if_using_cloud

# =============================================================================
# RATE LIMITING (UPSTASH REDIS)
# =============================================================================

# Upstash Redis (optional - for rate limiting)
# UPSTASH_REDIS_REST_URL=your_upstash_redis_url
# UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# =============================================================================
# PROVIDER CONFIGURATION
# =============================================================================

# Default providers (change these based on your preferences)
LLM_PROVIDER=openai
EMBEDDING_PROVIDER=openai
SEARCH_PROVIDER=tavily
VECTOR_DB_PROVIDER=qdrant

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================

NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
